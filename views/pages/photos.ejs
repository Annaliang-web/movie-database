<html>
    <head>
        <title>The Movie Data Hub</title>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <link href="https://fonts.googleapis.com/css?family=Audiowide|Fascinate+Inline" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="../styles.css">
    </head>

    <body>
    <div class="container">
        <nav class="navbar navbar-inverse navbar-fixed-top"><!--    Nav Bar  -->
        <div class="container-fluid">
            <a id='logo' class="navbar-brand" href="http://localhost:8082/">TMDH</a>
            <ul class="nav navbar-nav">
            <li><a href="http://localhost:8082/">Movies</a></li>
            <li><a href="http://localhost:8082/photos">Photos</a></li>
            <li><a href="#">News</a></li>
            </ul>
            <form method='POST' action='/search' class="navbar-form navbar-right">
                <input type="text" name='searchMovies' id='searchMovies' class="form-control" placeholder="Search movies..">
                <button type="submit" class="btn btn-md">
                    <span class="glyphicon glyphicon-search"></span>
                </button>
            </form>
        </div>    
        </nav>    

    <% /*  ----------------------------------------------
        Repeat the following HTML structure for all movies
        -------------------------------------------------- */ 
        for(let i = 0; i < movieList.length; i++){  
            %>
            
            <a class="movie-link" href='http://localhost:8082/movie/<%= movieList[i].title  %>'><!--do not include the url in angle tags -->  
            <div class="media movie-list-item">
                <div class="media-left">
                    <div class="poster-container">
                        
                    </div>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">
                        <%= movieList[i].title %>
                        <span class="badge"><%= movieList[i].imdbRating  %></span>
                    </h4>
                    <div>
                        <%= movieList[i].plot %>
                    </div>
                    <div class="released-date">
                        Released: <%= movieList[i].released %>
                    </div>
                </div>
            </div>
            </a>
        <%
        } 
            %>

    </div>
    </body>
</html>

